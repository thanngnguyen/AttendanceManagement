@model AttendanceManagement.ViewModels.JoinClassViewModel
@{
    ViewData["Title"] = "Tham gia lớp học";
}

<div class="glass-bg-blue">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="glass-card">
                    <div class="glass-header text-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-plus icon-glow"></i> Tham gia lớp học
                        </h4>
                    </div>
                    <div class="glass-body">
                        <div class="glass-alert-info mb-4">
                            <i class="fas fa-info-circle"></i> Nhập mã lớp do giáo viên cung cấp để tham gia lớp học
                        </div>

                        <form asp-action="Join" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-4">
                                <label asp-for="ClassCode" class="form-label">
                                    <i class="fas fa-key"></i> Mã lớp học
                                </label>
                                <input asp-for="ClassCode" class="form-control glass-input text-center" 
                                       placeholder="VD: ABC1234" 
                                       style="letter-spacing: 4px; text-transform: uppercase; font-size: 1.5rem; font-weight: 700;" 
                                       maxlength="7" id="ClassCode" />
                                <span asp-validation-for="ClassCode" class="text-danger"></span>
                            </div>

                            <div class="glass-divider"></div>

                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-gradient-success btn-lg">
                                    <i class="fas fa-sign-in-alt"></i> Tham gia ngay
                                </button>
                                <a asp-action="Index" class="btn btn-gradient-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>
                        </form>

                        <div class="glass-alert-warning mt-4">
                            <strong><i class="fas fa-lightbulb"></i> Hướng dẫn:</strong>
                            <ul class="mb-0 mt-2" style="padding-left: 20px;">
                                <li>Mã lớp gồm 7 ký tự (chữ và số)</li>
                                <li>Hỏi giáo viên để nhận mã lớp chính xác</li>
                                <li>Mã lớp không phân biệt chữ hoa/thường</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#ClassCode').on('input', function() {
                this.value = this.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
            });

            // Auto-format as user types
            $('#ClassCode').on('keyup', function() {
                if(this.value.length === 7) {
                    $(this).addClass('border-success');
                } else {
                    $(this).removeClass('border-success');
                }
            });
        });
    </script>
}
