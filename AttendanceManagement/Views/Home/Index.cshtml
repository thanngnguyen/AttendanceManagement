@{
    ViewData["Title"] = "Trang chủ";
}

<div class="glass-bg-indigo">
    <div class="container">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Authenticated User View -->
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="glass-card mb-4">
                        <div class="glass-header text-center">
                            <h1>
                                <i class="fas fa-graduation-cap icon-glow"></i> 
                                Chào mừng, @ViewBag.UserName!
                            </h1>
                            <p class="text-white-shadow" style="font-size: 1.2rem; margin-top: 10px;">
                                Hệ thống Quản lý Lớp học & Điểm danh thông minh
                            </p>
                        </div>
                        
                        <div class="glass-body">
                            <div class="row g-4 mb-4">
                                <div class="col-md-4">
                                    <div class="glass-card-sm text-center">
                                        <i class="fas fa-chalkboard fa-4x icon-glow mb-3" style="color: #4facfe;"></i>
                                        <h2 class="text-white">@ViewBag.ClassCount</h2>
                                        <p class="text-glass-muted">Lớp học</p>
                                    </div>
                                </div>
                                
                                @if (ViewBag.UserRole == "Teacher" || ViewBag.UserRole == "Admin")
                                {
                                    <div class="col-md-4">
                                        <div class="glass-card-sm text-center">
                                            <i class="fas fa-clipboard-check fa-4x icon-glow mb-3" style="color: #43e97b;"></i>
                                            <h5 class="text-white">Điểm danh</h5>
                                            <p class="text-glass-muted">Quản lý phiên điểm danh</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="glass-card-sm text-center">
                                            <i class="fas fa-tasks fa-4x icon-glow mb-3" style="color: #fee140;"></i>
                                            <h5 class="text-white">Bài tập</h5>
                                            <p class="text-glass-muted">Tạo và chấm bài tập</p>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-4">
                                        <div class="glass-card-sm text-center">
                                            <i class="fas fa-user-check fa-4x icon-glow mb-3" style="color: #43e97b;"></i>
                                            <h5 class="text-white">Điểm danh</h5>
                                            <p class="text-glass-muted">Điểm danh trực tuyến</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="glass-card-sm text-center">
                                            <i class="fas fa-file-alt fa-4x icon-glow mb-3" style="color: #fee140;"></i>
                                            <h5 class="text-white">Bài tập</h5>
                                            <p class="text-glass-muted">Nộp và theo dõi bài tập</p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="text-center">
                                <a class="btn btn-gradient-info btn-lg" asp-controller="Class" asp-action="Index">
                                    <i class="fas fa-arrow-right"></i> Đến lớp học của tôi
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Feature Cards -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="glass-card h-100">
                                <div class="glass-header">
                                    <h5 class="mb-0"><i class="fas fa-info-circle icon-glow"></i> Tính năng chính</h5>
                                </div>
                                <div class="glass-body">
                                    <div class="glass-box mb-3">
                                        <i class="fas fa-check text-success"></i> Quản lý lớp học trực tuyến
                                    </div>
                                    <div class="glass-box mb-3">
                                        <i class="fas fa-check text-success"></i> Điểm danh với định vị GPS
                                    </div>
                                    <div class="glass-box mb-3">
                                        <i class="fas fa-check text-success"></i> Phát hiện vi phạm điểm danh
                                    </div>
                                    <div class="glass-box mb-3">
                                        <i class="fas fa-check text-success"></i> Quản lý bài tập và chấm điểm
                                    </div>
                                    <div class="glass-box mb-3">
                                        <i class="fas fa-check text-success"></i> Xin nghỉ phép trực tuyến
                                    </div>
                                    <div class="glass-box mb-0">
                                        <i class="fas fa-check text-success"></i> Bảng tin và thảo luận
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="glass-card h-100">
                                <div class="glass-header">
                                    <h5 class="mb-0"><i class="fas fa-question-circle icon-glow"></i> Hướng dẫn sử dụng</h5>
                                </div>
                                <div class="glass-body">
                                    @if (ViewBag.UserRole == "Teacher" || ViewBag.UserRole == "Admin")
                                    {
                                        <h6 class="text-white mb-3" style="color: #4facfe !important;">
                                            <i class="fas fa-chalkboard-teacher"></i> Dành cho Giáo viên:
                                        </h6>
                                        <div class="glass-box mb-2">1. Tạo lớp học và chia sẻ mã lớp cho sinh viên</div>
                                        <div class="glass-box mb-2">2. Tạo phiên điểm danh với vị trí GPS</div>
                                        <div class="glass-box mb-2">3. Theo dõi sinh viên điểm danh và vi phạm</div>
                                        <div class="glass-box mb-2">4. Tạo bài tập và chấm điểm</div>
                                        <div class="glass-box mb-0">5. Duyệt đơn xin nghỉ phép</div>
                                    }
                                    else
                                    {
                                        <h6 class="text-white mb-3" style="color: #43e97b !important;">
                                            <i class="fas fa-user-graduate"></i> Dành cho Sinh viên:
                                        </h6>
                                        <div class="glass-box mb-2">1. Tham gia lớp học bằng mã lớp</div>
                                        <div class="glass-box mb-2">2. Bật định vị trước khi điểm danh</div>
                                        <div class="glass-box mb-2">3. Điểm danh trong khoảng thời gian cho phép</div>
                                        <div class="glass-box mb-2">4. Nộp bài tập đúng hạn</div>
                                        <div class="glass-box mb-0">5. Gửi đơn xin nghỉ phép khi cần</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Guest View -->
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="glass-card text-center mb-5">
                        <div class="glass-header">
                            <h1 style="font-size: 3rem;">
                                <i class="fas fa-graduation-cap icon-glow"></i>
                            </h1>
                            <h2 class="mt-3">Hệ thống Quản lý Lớp học</h2>
                            <p class="lead text-white-shadow mt-3">
                                Giải pháp quản lý lớp học và điểm danh thông minh với công nghệ định vị GPS
                            </p>
                        </div>
                        
                        <div class="glass-body">
                            <p class="text-glass fs-5 mb-4">
                                Tính năng điểm danh hiện đại, chống gian lận, quản lý bài tập hiệu quả
                            </p>
                            <div class="d-flex gap-3 justify-content-center flex-wrap">
                                <a class="btn btn-gradient-primary btn-lg" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                                <a class="btn btn-gradient-success btn-lg" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Đăng ký
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Feature Cards -->
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="glass-card-sm text-center h-100">
                                <i class="fas fa-map-marker-alt fa-5x icon-glow mb-4" style="color: #4facfe;"></i>
                                <h5 class="text-white mb-3">Điểm danh GPS</h5>
                                <p class="text-glass">
                                    Sử dụng công nghệ định vị để đảm bảo sinh viên điểm danh tại lớp
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card-sm text-center h-100">
                                <i class="fas fa-shield-alt fa-5x icon-glow mb-4" style="color: #43e97b;"></i>
                                <h5 class="text-white mb-3">Chống gian lận</h5>
                                <p class="text-glass">
                                    Phát hiện tự động các hành vi điểm danh hộ, sử dụng chung thiết bị
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="glass-card-sm text-center h-100">
                                <i class="fas fa-chart-line fa-5x icon-glow mb-4" style="color: #fee140;"></i>
                                <h5 class="text-white mb-3">Thống kê chi tiết</h5>
                                <p class="text-glass">
                                    Báo cáo điểm danh, theo dõi tiến độ học tập của sinh viên
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
