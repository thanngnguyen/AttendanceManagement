@model AttendanceManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="glass-bg-blue">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="glass-card">
                    <div class="glass-header text-center">
                        <h2 class="mb-0">
                            <i class="fas fa-sign-in-alt icon-glow"></i> Đăng nhập
                        </h2>
                    </div>

                    <div class="glass-body">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email
                                </label>
                                <input asp-for="Email" class="form-control glass-input" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock"></i> Mật khẩu
                                </label>
                                <input asp-for="Password" type="password" class="form-control glass-input" placeholder="Mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-4 form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" style="width: 20px; height: 20px; cursor: pointer;" />
                                <label asp-for="RememberMe" class="form-check-label text-white" style="margin-left: 10px; cursor: pointer;">
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-gradient-info btn-lg">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </button>
                            </div>
                        </form>

                        <div class="glass-divider"></div>

                        <div class="text-center">
                            <p class="text-glass mb-0">
                                Chưa có tài khoản? 
                                <a asp-action="Register" class="glass-link">Đăng ký ngay</a>
                            </p>
                        </div>

                        <div class="glass-alert-info mt-4">
                            <strong><i class="fas fa-info-circle"></i> Tài khoản demo:</strong><br />
                            <div class="mt-2">
                                <strong>Teacher:</strong> teacher@attendance.com / Teacher@123<br />
                                <strong>Student:</strong> student@attendance.com / Student@123
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
