@model List<UserListItem>
@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!-- Top Bar -->
<div class="admin-topbar">
    <div class="topbar-title">
        <h1>Quản Lý Người Dùng</h1>
        <small>Tổng: @ViewBag.TotalCount người dùng</small>
    </div>
    <div class="topbar-actions">
        <a asp-action="Users" class="topbar-action-btn">
            <i class="fas fa-sync-alt"></i> Làm Mới
        </a>
    </div>
</div>

<div class="glass-card">
    <div class="glass-header">
        <h5 class="mb-0">
            <i class="fas fa-users icon-glow"></i> Danh Sách Người Dùng
        </h5>
    </div>

    <div class="glass-body">
        <!-- Filter -->
        <div class="mb-4">
            <div class="btn-group" role="group">
                <a asp-action="Users" class="btn btn-outline-light @(ViewBag.CurrentRole == null ? "active" : "")">
                    Tất Cả (@ViewBag.TotalCount)
                </a>
                <a asp-action="Users" asp-route-role="@UserRole.Student" class="btn btn-outline-light @(ViewBag.CurrentRole == UserRole.Student ? "active" : "")">
                    Sinh Viên
                </a>
                <a asp-action="Users" asp-route-role="@UserRole.Teacher" class="btn btn-outline-light @(ViewBag.CurrentRole == UserRole.Teacher ? "active" : "")">
                    Giáo Viên
                </a>
                <a asp-action="Users" asp-route-role="@UserRole.Admin" class="btn btn-outline-light @(ViewBag.CurrentRole == UserRole.Admin ? "active" : "")">
                    Admin
                </a>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table glass-table">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Mã SV</th>
                        <th>Vai Trò</th>
                        <th>Lớp</th>
                        <th>Điểm Danh</th>
                        <th>Ngày Tạo</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.FullName</strong></td>
                            <td>@user.Email</td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.StudentId))
                                {
                                    <span class="badge bg-info">@user.StudentId</span>
                                }
                            </td>
                            <td>
                                <span class="badge" style="background: @(user.Role == UserRole.Admin ? "#ef4444" : user.Role == UserRole.Teacher ? "#f59e0b" : "#10b981")">
                                    @user.Role.ToString()
                                </span>
                            </td>
                            <td>@user.EnrolledClassesCount</td>
                            <td>@user.AttendanceRecordsCount</td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="UserDetail" asp-route-id="@user.Id" class="btn btn-gradient-info btn-sm">
                                    <i class="fas fa-eye"></i>Xem
                                </a>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-gradient-warning btn-sm">
                                    <i class="fas fa-edit"></i>Chỉnh sửa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Users" asp-route-page="@i" asp-route-role="@ViewBag.CurrentRole">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
